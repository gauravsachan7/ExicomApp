<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/about_system">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:elevation="5dp"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="System Information"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:text="Card Serial Number"/>
            <TextView
                android:id="@+id/card_serial_num"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="--"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:text="Card Part Number"/>
            <TextView
                android:id="@+id/card_part_num"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="--"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:text="System Serial Number"/>
            <TextView
                android:id="@+id/system_serial_num"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="--"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:text="System Part Number"/>
            <TextView
                android:id="@+id/system_part_num"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="--"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:text="Application Version"/>
            <TextView
                android:id="@+id/application_version"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="--"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>