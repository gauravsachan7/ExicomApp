<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/guest_img"
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:layout_marginStart="10sp"
            android:src="@drawable/ic_guest_purple"/>
        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:layout_alignTop="@+id/guest_img"
            android:layout_toRightOf="@+id/guest_img"/>
        <TextView
            android:id="@+id/guest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:layout_toRightOf="@+id/guest_img"
            android:layout_below="@+id/device_name"/>
        <TextView
            android:id="@+id/guest_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:layout_toRightOf="@+id/guest_img"
            android:layout_below="@id/guest_name"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal"
        android:gravity="end">
        <TextView
            android:id="@+id/grant_status"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center" />
        <Button
            android:id="@+id/grant_access"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/button_shape_green"
            android:text="Allow"
            android:textColor="@color/colorWhite"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/deny_access"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/button_shape_red"
            android:text="Deny"
            android:textColor="@color/colorWhite"
            android:layout_margin="5dp"/>
    </LinearLayout>

</LinearLayout>